@{
    ViewBag.Title = "Add Product";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddProduct", "Products", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Create a new product.</h4>
    <hr />

    <div class="form-group">
        <div class="col-md-6">
            <input type="text" name="title" value="" id="title" class="form-control" placeholder="Title (*)" />
        </div>
        <div class="col-md-6">
            <input type="number" name="number" value="" id="number" class="form-control" placeholder="Quantity (*)" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input type="number" name="price" value="" id="price" class="form-control" placeholder="Price (*)"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create product" />
        </div>
    </div>
}

